<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/reader_options_main_panel"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:visibility="gone"
    android:padding="8dp"
    android:background="@color/trans_light_black">


    <LinearLayout
        android:id="@+id/reader_options_first_panel"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <top.rechinx.meow.widget.ReverseSeekBar
            android:id="@+id/reader_seek_bar"
            android:layout_width="520dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            app:dsb_min="1"
            app:dsb_trackColor="@color/white"
            app:dsb_rippleColor="?attr/colorPrimary"
            app:dsb_progressColor="?attr/colorPrimary"
            app:dsb_indicatorColor="?attr/colorPrimary"
            app:dsb_trackHeight="4dp"
            app:dsb_thumbSize="12dp"/>

        <LinearLayout
            android:orientation="vertical"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/reader_options"
                android:src="@drawable/ic_options_white_48dp"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:layout_weight="2"
                android:textSize="8dp"
                android:text="@string/text_options"/>
        </LinearLayout>


    </LinearLayout>


    <LinearLayout
        android:visibility="gone"
        android:id="@+id/reader_options_second_panel"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:gravity="center"
                android:layout_marginLeft="9dp"
                android:layout_marginRight="9dp"
                android:textColor="@color/white"
                android:text="@string/text_options_reader_mode"/>

            <top.rechinx.meow.widget.CheckableButton
                android:id="@+id/reader_page_mode_btn"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_gravity="center"
                android:background="@drawable/btn_status_selector"
                android:textColor="@color/white"
                android:layout_marginLeft="9dp"
                android:layout_marginRight="9dp"
                style="?android:attr/borderlessButtonStyle"
                android:textSize="10dp"
                android:text="@string/text_options_page"/>

            <top.rechinx.meow.widget.CheckableButton
                android:id="@+id/reader_stream_mode_btn"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_gravity="center"
                android:layout_marginLeft="9dp"
                android:layout_marginRight="9dp"
                android:background="@drawable/btn_status_selector"
                android:textColor="@color/white"
                android:textSize="10dp"
                style="?android:attr/borderlessButtonStyle"
                android:text="@string/text_options_stream"/>
        </LinearLayout>

        <include layout="@layout/custom_divider" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/reader_hidden_second_options"
                android:src="@drawable/ic_downwards_white_48dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginLeft="9dp"
                android:textColor="@color/white"
                android:text="@string/text_options_hidden"/>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>